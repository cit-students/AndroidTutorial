<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin.mycalculatordemo.MainActivity">

    <TextView
        android:textStyle="bold"
        android:textSize="50dp"
        android:maxLines="2"
        android:maxLength="17"
        android:hint="0"
        android:id="@+id/txresult"
        android:layout_width="match_parent"
        android:layout_height="170dp" />
    <TableLayout
        android:background="#e74a0c"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow>
            <Button
                android:onClick="onClickNumber"
                android:textColor="#fff"
                android:background="#b7a9a9"
                android:id="@+id/id7"
                android:textSize="50sp"
                android:text="7"
                android:layout_width="90dp"
                android:layout_height="90dp"
                />
            <Button
                android:onClick="onClickNumber"
                android:textColor="#fff"
                android:background="#b7a9a9"
                android:id="@+id/id8"
                android:textSize="50sp"
                android:text="8"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
            <Button
                android:onClick="onClickNumber"
                android:textColor="#fff"
                android:background="#b7a9a9"
                android:id="@+id/id9"
                android:textSize="50sp"
                android:text="9"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
            <Button
                android:onClick="onClickOperator"
                android:textColor="#fff"
                android:background="#ea830e"
                android:id="@+id/idAdd"
                android:textSize="50sp"
                android:text="+"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
        </TableRow>

        <TableRow>
            <Button
                android:onClick="onClickNumber"
                android:textColor="#fff"
                android:background="#b7a9a9"
                android:id="@+id/id4"
                android:textSize="50sp"
                android:text="4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                />
            <Button
                android:onClick="onClickNumber"
                android:textColor="#fff"
                android:background="#b7a9a9"
                android:id="@+id/id5"
                android:textSize="50sp"
                android:text="5"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
            <Button
                android:onClick="onClickNumber"
                android:textColor="#fff"
                android:background="#b7a9a9"
                android:id="@+id/id6"
                android:textSize="50sp"
                android:text="6"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
            <Button
                android:onClick="onClickOperator"
                android:textColor="#fff"
                android:background="#ea830e"
                android:id="@+id/idtru"
                android:textSize="50sp"
                android:text="-"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
        </TableRow>
        <TableRow>
            <Button
                android:onClick="onClickNumber"
                android:textColor="#fff"
                android:background="#b7a9a9"
                android:id="@+id/id1"
                android:textSize="50sp"
                android:text="1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                />
            <Button
                android:onClick="onClickNumber"
                android:textColor="#fff"
                android:background="#b7a9a9"
                android:id="@+id/id2"
                android:textSize="50sp"
                android:text="2"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
            <Button

                android:onClick="onClickNumber"
                android:textColor="#fff"
                android:background="#b7a9a9"
                android:id="@+id/id3"
                android:textSize="50sp"
                android:text="3"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
            <Button
                android:onClick="onClickOperator"
                android:textColor="#fff"
                android:background="#ea830e"
                android:id="@+id/idnhan"
                android:textSize="50sp"
                android:text="x"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
        </TableRow>
        <TableRow>
            <Button
                android:onClick="onClickClear"
                android:textColor="#fff"
                android:background="#b7a9a9"
                android:id="@+id/idC"
                android:textSize="50sp"
                android:text="C"
                android:layout_width="90dp"
                android:layout_height="90dp"
                />
            <Button
                android:onClick="onClickNumber"
                android:textColor="#fff"
                android:background="#b7a9a9"
                android:id="@+id/id0"
                android:textSize="50sp"
                android:text="0"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
            <Button
                android:onClick="onClickEqual"
                android:textColor="#fff"
                android:background="#b7a9a9"
                android:id="@+id/idbang"
                android:textSize="50sp"
                android:text="="
                android:layout_width="90dp"
                android:layout_height="90dp"/>
            <Button
                android:onClick="onClickOperator"
                android:textColor="#fff"
                android:background="#ea830e"
                android:id="@+id/idchia"
                android:textSize="50sp"
                android:text="/"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
        </TableRow>

    </TableLayout>

</LinearLayout>
